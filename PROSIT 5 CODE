            <section class="form-section-flou">
                <h1 class="text-center">S'inscrire</h1>
                <p class="text-justify">Vous n’avez pas de compte ? Créons en un ensemble ! C’est facile, rapide et gratuit !</p>
                <article>

                <form action="" method="POST" enctype="multipart/form-data">
                    <label>Déposez un CV</label>
                    <input type="file" name="file" accept=".jpeg,.jpg,.png,.pdf,.doc,.docx,.odt,.rtf">
                    <br><br>

                    <div class="small">Poids max. 2Mo</div>
                    <div class="small">Formats : .pdf, .doc, .docx, .odt, .rtf, .jpg, .png</div>    

                    <br>
                <button type="submit" name="submit">Uploader</button>   
                </form>

                <?php
                  if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_FILES["file"])) { // VERICATION DE LA REQUETE 
                    $targetfolder = "testupload/"; // la var targetfolder est l'emplacemnt du fichier qui stock les upload


                    $fileName = basename($_FILES["file"]["name"]); // recup le nom du fichier 
                    $targetFile = $targetfolder . $fileName;

                    $fileType = strtolower(pathinfo($targetFile, PATHINFO_EXTENSION)); // RECUP L'extention
                    $allowedTypes = ["jpg", "jpeg", "png", "pdf", "doc", "docx", "odt", "rtf"]; //liste des fichier

                    if (!in_array($fileType, $allowedTypes)) {  // verif si le fihier est compatible.
                        echo "<p style='color:red;'>Seuls les fichiers JPG, PNG, PDF, DOC, DOCX, ODT et RTF sont autorisés.</p>";// cas ou les fichier sont pas bon
                    } elseif ($_FILES["file"]["size"] > 2 * 1024 * 1024) {
                        echo "<p style='color:red;'>Le fichier est trop volumineux (max 2 Mo).</p>";
                    } elseif (move_uploaded_file($_FILES["file"]["tmp_name"], $targetFile)) { // cas inverse ou les fichiers sont ok pour l'upload 
                        echo "<p style='color:green;'>Fichier uploadé avec succès : " . htmlspecialchars($fileName) . "</p>";
                    } else {
                        echo "<p style='color:red;'>Erreur lors du téléchargement.</p>";
                    }
                }
                ?>
</article>
